<h2>Event Details</h2>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventType)
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(model => model.EventID)
            </td>
            <td>
                @Html.DisplayFor(model => model.EventName)
            </td>
            <td>
                @Html.DisplayFor(model => model.EventType)
            </td>
        </tr>
    </tbody>
</table>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p>
        @* Add in buttons for viewing results, etc *@
        @Html.ActionLink("Return to Events Index", "EventsIndex", "Events", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "btn btn-primary" })
