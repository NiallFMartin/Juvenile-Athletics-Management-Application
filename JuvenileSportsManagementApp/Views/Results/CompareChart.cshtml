@model List<JuvenileSportsManagementApp.Models.AnalyseVM>

@{
    var athleteChart = new Chart(width: 600, height: 400)
        .AddTitle("Athlete Analysis")
        .AddSeries(chartType: "Line", name: Model[0].AthleteName,
        xValue: Model[0].ResultDates, xField: "Date",
        yValues: Model[0].Results, yFields: Model[0].EventType)
        .AddSeries(chartType: "Line", name: Model[1].AthleteName,
        xValue: Model[1].ResultDates, xField: "Date",
        yValues: Model[1].Results, yFields: Model[1].EventType)
        .AddLegend()
        .Write();
}

@Html.HiddenFor(model => Model[0].AthleteID)
